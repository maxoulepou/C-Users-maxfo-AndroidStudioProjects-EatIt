<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragment.MonProfilFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nom_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nom"/>

                <EditText
                    android:id="@+id/rentrer_nom_monProfil"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/fond_edittext_profil"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prenom_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/prenom" />

                <EditText
                    android:id="@+id/rentrer_prenom_monProfil"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/fond_edittext_profil"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sexe_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sexe" />

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/rentrer_feminin_monProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/fond_edittext_profil"
                        android:text="@string/feminin" />

                    <Button
                        android:id="@+id/rentrer_masculin_monProfil"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="40dp"
                        android:background="@drawable/fond_edittext_profil"
                        android:text="@string/masculin" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profilemail" />

                <EditText
                    android:id="@+id/rentrer_email_monProfil"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/telephone" />


                <EditText
                    android:id="@+id/rentrer_telephone_monProfil"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_naissancep_atient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/profildatedenaissance" />


                <EditText
                    android:id="@+id/rentrer_date_naissance_monProfil"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="date"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adresse_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/adresse" />


                <EditText
                    android:id="@+id/rentrer_adresse"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/code_postal_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/codepostal" />


                <EditText
                    android:id="@+id/rentrer_code_postal"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ville_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ville" />

                <EditText
                    android:id="@+id/rentrer_ville"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/fond_edittext_profil"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adresse_postale_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/adressepostale" />

                <EditText
                    android:id="@+id/rentrer_adresse_postale"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/fond_edittext_profil"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_urgence_patient"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:text="@string/contacturgence" />

                <EditText
                    android:id="@+id/rentrer_contact_urgence"
                    android:layout_width="270dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/fond_edittext_profil"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingBottom="3dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bouton_enregistrer_monProfil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rectanglejaune"
            android:text="@string/enregistrer"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bouton_enregistrer_monProfil"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/modifier_mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modifiermdp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/supp_compte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/suppcompte"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/deconnexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deconnexion"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

